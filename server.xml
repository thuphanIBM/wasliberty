
<?xml version="1.0" encoding="UTF-8"?>
<server>

    <!-- Enable features -->
    <featureManager>        

    </featureManager>

       
       <variable name="defaultHostName" value="localhost"/>
        <!-- Triggers automatic startup of server. -->
        <webContainer deferServletLoad="false" com.ibm.ws.webcontainer.disablexPoweredBy="true"/>
    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint" 
                                        host="*" 
                                        httpPort="9080" 
                                        httpsPort="9443"
                                        protocolVersion="http/1.1">
            
                <httpOptions PurgeDataDuringClose="true"/>
        </httpEndpoint>
                  
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="false"/>
    <classloading useJarUrls="true"/>
    
    <logging traceSpecification="*=info" consoleLogLevel="INFO"/>
    <httpSession cookieSecure="true" cookieSameSite="Strict" useContextRootAsCookiePath="false" cookieHttpOnly="true" 
                 invalidateOnUnauthorizedSessionRequestException="true" />
    <httpDispatcher enableWelcomePage="false" />
    <authCache timeout="120m"/>


</server>
