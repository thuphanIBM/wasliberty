
<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <!-- Enable features -->
    <featureManager>        
                <feature>appSecurity-2.0</feature>
                <feature>jsp-2.3</feature>
                <feature>jdbc-4.2</feature>
                <feature>ldapRegistry-3.0</feature>
                <feature>concurrent-1.0</feature>
                <feature>jaxrs-2.1</feature>
                <feature>ssl-1.0</feature>
                <feature>jndi-1.0</feature>
                <feature>localConnector-1.0</feature>
                <feature>jpa-2.2</feature>
                <feature>ejbPersistentTimer-3.2</feature>
                <feature>monitor-1.0</feature>
                <feature>javaMail-1.6</feature>
                <feature>sessionDatabase-1.0</feature>
                <feature>federatedRegistry-1.0</feature>
                <feature>passwordUtilities-1.0</feature>
    </featureManager>

       
       <variable name="defaultHostName" value="localhost"/>
        <!-- Triggers automatic startup of server. -->
        <webContainer deferServletLoad="false" com.ibm.ws.webcontainer.disablexPoweredBy="true"/>
    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint" 
                                        host="*" 
                                        httpPort="9080" 
                                        httpsPort="9443"
                                        protocolVersion="http/1.1">
                <!-- Required for PMR 41616,227,000 -->
                <httpOptions PurgeDataDuringClose="true"/>
        </httpEndpoint>
                  
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="false"/>
    <classloading useJarUrls="true"/>
    <ltpa keysFileName="resources/security/ltpa.keys" keysPassword="{xor}Dz4sLCgwLTtu"/>
    
    <logging traceSpecification="*=info" consoleLogLevel="INFO"/>
    <httpSession cookieSecure="true" cookieSameSite="Strict" useContextRootAsCookiePath="false" cookieHttpOnly="true" 
                 invalidateOnUnauthorizedSessionRequestException="true" />
    <httpDispatcher enableWelcomePage="false" />
    <authCache timeout="120m"/>

<!-- Temporary workaround required for Edit Client, DBACLD-101426 -->
<mimeTypes>
<type>exe=application/x-msdownload</type>
</mimeTypes>


</server>
